{
  "name": "reactjs-feature-flags",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@paralleldrive/react-feature-toggles": "^2.3.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "docker-build-dev": "docker build -f Dockerfile.dev -t react-js-feature:1.0.0-dev .",
    "docker-build-prod": "docker build -f Dockerfile -t react-js-feature:1.0.0-prod .",
    "docker-start-dev": "docker run --rm -it --name web -p 3000:3000 react-js-feature:1.0.0-dev",
    "docker-start-prod": "docker run --rm -it --name web -p 3000:80 react-js-feature:1.0.0-prod",
    "docker-rmi": "docker rmi $(docker images -q) --force",
    "deployment": "kubectl apply -f deployments/deployment.yml",
    "minikube": "minikube dashboard",
    "minikube-run": "minikube start",
    "minikube-service": "minikube service minikube-reactjs-feature-flags"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
